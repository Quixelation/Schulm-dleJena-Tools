{
  "manifest_version": 2,
  "version": "2021.4.2",
  "version_name": "2021.3.21 >> 2021.4.2 (development)",

  "name": "Schulm**dleJena Tools",
  "description": "Inoffizielles Tools für das Moodle™ System der Jenaer Schulen.",
  "browser_specific_settings": {
    "gecko": {
      "id": "schulmoodlejenatools@example.com",
      "strict_min_version": "42.0",
      "update_url": "https://smjt.vercel.app/updates.json"
    }
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Schulm**dleJena Tools",
    "browser_style": false,
    "default_popup": "static/popup/index.html"
  },
  "icons": {
    "16": "icons/16x16.png",
    "24": "icons/24x24.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "64": "icons/64x64.png",
    "128": "icons/128x128.png"
  },
  "background": {
    "scripts": ["generated/background.js"],
    "persistent": true
  },
  "permissions": ["storage", "tabs", "unlimitedStorage"],
  "author": "Robert Steffen Stündl",
  "content_scripts": [
    {
      "matches": [
        "https://moodle.jsp.jena.de/*",
        "https://moodle.jsp.jena.de/*"
      ],
      "js": ["generated/manager.js", "generated/todo/bundle.js"],
      "css": [
        "css/global.css",
        "generated/todo/bundle.css",
        "css/command-pal/theme-light.css"
      ]
    },
    {
      "matches": [
        "https://moodle.jsp.jena.de/my*",
        "https://moodle.jsp.jena.de/my*"
      ],
      "css": ["css/tippy.css"]
    }
  ],
  "commands": {
    "panik-key": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Öffnet Moodle",
      "global": true
    }
  },
  "web_accessible_resources": [
    "icons/icon.png",
    "fonts/SansForgetica-Regular.otf"
  ]
}
