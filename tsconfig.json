{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "watch": false,
    "target": "ES6",
    "outDir": "dist/generated",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "src/popup/*",
    "src/todoManager/*",
    "src/shared/*",
    "src/manager",
    "src/background",
    "src/changesManager",
    "src/settings",
    "archive"
  ],
  "include": ["src/**/*"]
}
