{
  "compileOnSave": true,

  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "watch": false,
    "target": "ES6",
    "outDir": "dist/generated",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      //For legacy
      "@shared/*": ["./src/*"],
      "src": ["./src/*"]
    }
  },
  "exclude": [
    "src/popup/*",
    "src/todoManager/*",
    "src/shared/*",
    "src/changesManager",
    "archive"
  ],
  "include": ["./src/**/*"]
}
